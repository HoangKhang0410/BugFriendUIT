<div class="container comment-section">
  <div class="d-flex justify-content-between">
    <h3><i class="fas fa-comment"></i> comments</h3>
    <button type="button" class="btn btn-lg">Sign in</button>
  </div>
  <div class="row comment-box">
    <div class="col-1">
      <div class="avatar-box"><i class="far fa-user"></i></div>
    </div>
    <div class="col ms-4">
      <div class="form-floating">
        <textarea rows="4" style="height: 100%;" class="form-control" placeholder="Leave a comment here" id="floatingTextarea"></textarea>
        <label for="floatingTextarea">Comments</label>
      </div>
      <button style="width: 100%;" type="button" class="btn btn-lg">Post</button>
    </div>
  </div>
  <div class="d-flex justify-content-between">
    <p class="comment-count-text">100 comments</p>
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
        Sort by
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <li><a class="dropdown-item" href="#">newest</a></li>
        <li><a class="dropdown-item" href="#">most views</a></li>
        <li><a class="dropdown-item" href="#">most liked</a></li>
      </ul>
    </div>
  </div>
  <!-- <hr> -->
  <div class="comment-container">
    <div class="row">
      <div class="col-1">
        <div class="avatar-box"><i class="far fa-user"></i></div>
      </div>
      <div class="col ms-4">
        <h4>Name</h4>
